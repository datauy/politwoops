<%= render :template => "shared/filterform" %>
<% @politicians.each do |pol|%>
<div class="row section">
  <div class="col-md-2">
    <div class="avatar">	
      <a href="/user/<%= pol.user_name %>">
        <img src="<%= pol.avatar.url %>" class="politician-avatar" alt="<%= pol.user_name %>" width"73" height="73" />
      </a>
    </div>
  </div>

  <div class="col-md-5">
    <div class="content">
      <a href="/user/<%= pol.user_name %>/">
        <%= pol.full_name %>
      </a>
    </div>
  </div>

  <div class="col-md-3">
    <img src="<%= pol.party_logo_url %>" class="politician-party" alt="<%= pol.party.name %>" />
  </div>

  <div class="col-md-2">
    <% if pol.state %> <%= pol.state.upcase %> <% end %>
  </div>
</div>
<% end %>

<%= render :template => "shared/pager" %>
